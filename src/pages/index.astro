---
import { Dot } from "lucide-react";
import "../styles/global.css";
import PrimaryButton from "../components/PrimaryButton";
---

<main class="flex flex-col h-screen">
  <a
    href="/about"
    class="flex-1 hover:flex-2 flex justify-center items-center hover:bg-purple-600/10 transition-all duration-300 border-b border-white/5"
  >
    <div
      class="flex flex-col gap-4 flex-1 items-center justify-center text-center max-w-[80%]"
    >
      <h2>Para empresas</h2>
      <p class="flex opacity-50">
        Perfil profesional <Dot /> CV <Dot /> Experiencia
      </p>
      <PrimaryButton className="text-lg px-4" cta="Ver perfil" />
    </div>
  </a>
  <a
    href="/about"
    class="flex-1 hover:flex-2 flex justify-center items-center hover:bg-purple-600/10 transition-all duration-300 border-b border-white/5"
  >
    <div
      class="flex flex-col gap-4 flex-1 items-center justify-center text-center max-w-[80%]"
    >
      <h2>Para clientes</h2>
      <p class="flex opacity-50">
        Perfil profesional <Dot /> CV <Dot /> Experiencia
      </p>
      <PrimaryButton className="text-lg px-4" cta="Ver perfil" />
    </div>
  </a>
</main>
